@model IEnumerable<kutuphane_otomasyou.Models.table.CezaliKisiler>

@{
    ViewBag.Title = "Banlı Kullanıcılar";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 50px;
        }

        .table th, .table td {
            vertical-align: middle;
            text-align: center;
        }

        .table thead th {
            background-color: #007bff;
            color: white;
        }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: rgba(0, 0, 0, 0.05);
        }

        .table-hover tbody tr:hover {
            background-color: rgba(0, 123, 255, 0.25);
        }

        .card {
            margin-top: 20px;
            border-radius: 10px;
        }

        .card-header {
            background-color: #007bff;
            color: white;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="card-header text-center">
                <h2>Banlı Kullanıcılar</h2>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Ad</th>
                                <th>Soyad</th>
                                <th>Email</th>
                                <th>Şifre</th>
                                <th>İşlem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var kullanici in Model)
                                {
                                    <tr>
                                        <td>@kullanici.Id</td>
                                        <td>@kullanici.ad</td>
                                        <td>@kullanici.soyad</td>
                                        <td>@kullanici.email</td>
                                        <td>@kullanici.sifre</td>
                                        <td>
                                          
                                            
                                                @Html.ActionLink("Banı Kaldır", "baniKaldir", "EkleSil", new { kisiIsmi = kullanici.ad }, new { @class = "btn btn-danger btn-sm" })
                                               
                                          
                                        </td>

                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6" class="text-center">Banlı kullanıcı bulunamadı.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
