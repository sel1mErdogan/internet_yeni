@model kutuphane_otomasyou.Models.table.KisiKitapViewModel

@{
    ViewBag.Title = "AlinanKitaplarKisiTablo";
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>

    <div class="container mt-2" style="margin-bottom:200px; width:80%">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Kullanıcı Adı</th>
                    <th>Soyadı</th>
                    <th>Aldığı Kitaplar</th>
                    <!-- Diğer kullanıcı özellikleri -->
                </tr>
            </thead>
            <tbody>
                @foreach (var kisi in Model.Kisiler)
                {
                    <tr>
                        <td class="align-middle">@kisi.ad</td>
                        <td class="align-middle">@kisi.soyad</td>
                        <td>
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Kitap Adı</th>
                                        <th>Yazar</th>
                                        <!-- Diğer kitap özellikleri -->
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var kitap in Model.Kitaplar.Where(k => k.kullanici_ıd == kisi.Id))
                                    {
                                        <tr>
                                            <td>@kitap.kitap_adi</td>
                                            <td>@kitap.yazar</td>
                                            <!-- Diğer kitap özellikleri -->
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </td>
                        <!-- Diğer kullanıcı özellikleri -->
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-4CM7+I5yUYtSRPb/C7Ziv+olGZB2J7xkz0ELC3QztY4Aou0N+N08/MR5haPGxNVI" crossorigin="anonymous"></script>
</body>
</html>
